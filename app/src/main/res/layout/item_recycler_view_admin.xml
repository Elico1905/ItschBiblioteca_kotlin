<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/admin_recycler_carta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo: "
                    android:textAlignment="center"
                    android:textColor="@color/oculto"
                    android:textSize="27dp" />

                <TextView
                    android:id="@+id/admin_recycler_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="esto un un titulo"
                    android:textAlignment="center"
                    android:textColor="@color/oculto"
                    android:textSize="25dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/recycler_layout_mas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@color/rojo_itsch"
                        android:textSize="1dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/admin_recycler_autor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:text="Autor: nombre del autor"
                            android:textAlignment="center"
                            android:textColor="@color/oculto"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/admin_recycler_editorial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:text="Editorial: nombre de la editorial"
                            android:textAlignment="center"
                            android:textColor="@color/oculto"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/admin_recycler_comentario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:text="Comentario: esto es un comentario"
                            android:textColor="@color/oculto"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/admin_recycler_fecha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:text="fecha de la solicitud: 01/03/2021"
                            android:textAlignment="center"
                            android:textColor="@color/oculto"
                            android:textSize="17dp" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>