<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ITSCHBiblioteca" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/rojo_itsch</item>
        <item name="colorPrimaryVariant">@color/rojo_itsch</item>
        <item name="colorSecondary">@color/rojo_itsch</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>


    <style name="Splassh" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
    </style>
</resources>